<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PrivacyFragment">

    <ImageView
        android:id="@+id/logoHouse"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_foster" />

    <TextView
        android:id="@+id/TVJoinCommunity4"
        android:layout_width="237dp"
        android:layout_height="35dp"
        android:layout_marginBottom="50dp"
        android:text="Privacy and Policy"
        android:textAlignment="center"
        android:textColor="#7D4949"
        android:textSize="24sp"
        android:elevation="2dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.334" />

    <TextView
        android:id="@+id/TVDesc8"
        android:layout_width="344dp"
        android:layout_height="103dp"
        android:text="1. Introduction: We are committed to protecting your privacy and personal information. This privacy policy (the &quot;Policy&quot;) explains how we collect, use, and share information about you when you use our workout app (the &quot;App&quot;)."
        android:textColor="#7D4949"
        android:textSize="16sp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418" />

    <TextView
        android:id="@+id/TVDesc9"
        android:layout_width="344dp"
        android:layout_height="63dp"
        android:text="2. Information we collect: We may collect the following types of information about you when you use the App:"
        android:textColor="#7D4949"
        android:textSize="16sp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547" />

    <TextView
        android:id="@+id/TVDesc10"
        android:layout_width="340dp"
        android:layout_height="82dp"
        android:text="Device information: This includes information about the device you use to access the App, such as the hardware model, operating system and version, and unique device identifiers."
        android:textColor="#7D4949"
        android:textSize="16sp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

    <TextView
        android:id="@+id/TVDesc12"
        android:layout_width="340dp"
        android:layout_height="82dp"
        android:text="Usage information: This includes information about how you use the App, such as the features you access, the pages you visit, and the duration of your sessions."
        android:textColor="#7D4949"
        android:textSize="16sp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884" />

    <TextView
        android:id="@+id/TVDesc11"
        android:layout_width="344dp"
        android:layout_height="63dp"
        android:text="Personal information: This includes information that can be used to identify you, such as your name, email address, and phone number."
        android:textColor="#7D4949"
        android:textSize="16sp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="191dp"
        android:layout_height="178dp"
        android:layout_marginTop="36dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_white" />
</androidx.constraintlayout.widget.ConstraintLayout>